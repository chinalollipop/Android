<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hgapp.m8.common.widgets.NTitleBar
            android:id="@+id/tvBetRecordBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backText="返回" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:background="@color/l_view_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="40dp"
            android:gravity="left|center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="赛事类型"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/betRrcordGtype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/icon_textview_transfer"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="足球"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:background="@color/l_view_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"
            android:visibility="gone"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="40dp"
            android:gravity="left|center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="是否结算"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/betRrcordChecked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/icon_textview_transfer"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="全部"
                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"
            android:visibility="gone"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="40dp"
            android:gravity="left|center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="是否取消"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/betRrcordCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/icon_textview_transfer"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="未取消交易单"
                android:textSize="15sp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="40dp"
            android:gravity="center|left">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="日期"
                android:textColor="@color/textview_hight"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvBetRecordStartTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/icon_textview_transfer"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="请选择时间 "
                android:textColor="#868686"
                android:textSize="15sp" />

        </LinearLayout>

       <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:background="@color/l_view_color" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"
            android:visibility="gone"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="40dp"
            android:gravity="center|left">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="结束时间："
                android:textColor="@color/textview_hight"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvBetRecordEndTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/icon_textview_transfer"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="请选择时间 "
                android:textColor="#868686"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:background="@color/l_view_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="40dp"
            android:gravity="center|left">

            <TextView
                android:id="@+id/tvBetRecordToday"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/bg_btn_no_focus"
                android:gravity="center"
                android:text="今日"
                android:textColor="@color/n_edittext_pwd"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvBetRecordLastDay"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_btn_no_focus"
                android:gravity="center"
                android:text="昨日 "
                android:textColor="@color/n_edittext_pwd"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvBetRecordLastWeek"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_btn_no_focus"
                android:gravity="center"
                android:text="近一周 "
                android:textColor="@color/n_edittext_pwd"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvBetRecordLastMonth"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_btn_no_focus"
                android:gravity="center"
                android:text="本月 "
                android:visibility="gone"
                android:textColor="@color/n_edittext_pwd"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color" />


        <Button
            android:id="@+id/btnBetRecordSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_tbn_height"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="立即查询" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="15sp"
                android:text="日期" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="center"
                android:textSize="15sp"
                android:text="赛事" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:text="半场" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:text="全场" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color" />

        <!--<com.hgapp.a6668.common.widgets.NListView
            android:id="@+id/lvBetRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />-->
        <TextView
            android:id="@+id/tvBetRecordNodataT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="暂无没有数据"
            />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_text"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <com.hgapp.m8.common.widgets.NExpandableListView
        android:id="@+id/exSaiGuoListView"
        android:childDivider="@android:color/transparent"
        android:divider="@color/n_edittext_stroke"
        android:dividerHeight="1dp"
        android:groupIndicator="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>
        <ImageView
            android:id="@+id/betTTop"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="@mipmap/record_top"
            android:layout_margin="20dp"
            android:layout_alignParentRight="true"
            />
    </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">
            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/lvBetRecord2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </RelativeLayout>
    </LinearLayout>