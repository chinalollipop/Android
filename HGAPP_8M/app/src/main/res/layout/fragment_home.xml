<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/status_shape">

            <TextView
                android:id="@+id/tvHomePageLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/line_choice"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="线路1"
                android:textColor="#7288e8" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/home_logo" />

            <TextView
                android:id="@+id/tvHomePageLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="登陆/注册"
                android:textColor="#7288e8"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvHomePageUserMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:drawableLeft="@mipmap/title_right"
                android:textColor="#7288e8"
                android:textSize="16sp"
                android:visibility="gone" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<com.jude.rollviewpager.RollPagerView
                android:id="@+id/rollpageview"
                android:layout_width="match_parent"
                android:layout_height="144dp" />-->

            <com.lzj.gallery.library.views.BannerViewPager
                android:id="@+id/banner_3d"
                android:layout_width="match_parent"
                android:layout_height="144dp" />


            <ImageView
                android:id="@+id/home_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:background="@mipmap/home_sign"
                android:visibility="gone" />

            <com.hgapp.m8.common.widgets.HGGifView
                android:id="@+id/home_newyear"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_gravity="left|bottom"
                android:layout_marginBottom="35dp"
                android:visibility="gone" />
            <!-- <ImageView
                 android:id="@+id/home_newyear"
                 android:background="@mipmap/home_newy"
                 android:layout_gravity="left"
                 android:layout_margin="10dp"
                 android:visibility="gone"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>-->
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/register_left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_gravity="bottom"
            android:background="@mipmap/homapage_bulletin"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="43px"
                android:background="@mipmap/homapage_gonggao" />

            <com.hgapp.m8.common.widgets.MarqueeTextView
                android:id="@+id/tv_homapage_bulletin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="33px"
                android:layout_marginRight="23dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="#666666"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/btn_person"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/homeUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="欢迎您，亲爱的用户"
                    android:textColor="#7288e8" />

                <LinearLayout
                    android:id="@+id/homeLoginAl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="钱包中心:"
                        android:textColor="#7c7c7c" />

                    <TextView
                        android:id="@+id/homeMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥0.00"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/homeDeposit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_deposit"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:text="存款"
                    android:textColor="#7c7c7c" />

                <TextView
                    android:id="@+id/homeDwith"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_dwith"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:text="取款"
                    android:textColor="#7c7c7c" />

                <TextView
                    android:id="@+id/homeDepositC"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/home_deposit_c"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="转账"
                    android:textColor="#7c7c7c" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/homepageTab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        app:tabBackground="@drawable/tab_selector"
        app:tabIndicatorHeight="0dp"
        app:tabTextAppearance="@style/TabLayoutTextStyle" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_homepage_game_hall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="10dp"
            android:fadeScrollbars="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_person"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/hometabTextTY"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/home_tab_title"
                android:gravity="center"
                android:text="体育"
                android:textSize="17sp"
                android:textColor="@color/register_left" />

            <TextView
                android:id="@+id/hometabTextDJ"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="电竞"
                android:textSize="17sp"
                android:textColor="@color/cp_hall_tv" />

            <TextView
                android:id="@+id/hometabTextZR"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="真人"
                android:textSize="17sp"
                android:textColor="@color/cp_hall_tv" />


            <TextView
                android:id="@+id/hometabTextCP"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="彩票"
                android:textSize="17sp"
                android:textColor="@color/cp_hall_tv" />

            <TextView
                android:id="@+id/hometabTextQP"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="棋牌"
                android:textSize="17sp"
                android:textColor="@color/cp_hall_tv" />

            <TextView
                android:id="@+id/hometabTextDY"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="电游"
                android:textSize="17sp"
                android:textColor="@color/cp_hall_tv" />

            <TextView
                android:id="@+id/hometabTextZX"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="自选"
                android:textSize="17sp"
                android:textColor="@color/cp_hall_tv"
                android:visibility="gone" />
        </LinearLayout>

    </FrameLayout>


    <TextView
        android:id="@+id/home_bottom"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="60dp" />
</LinearLayout>