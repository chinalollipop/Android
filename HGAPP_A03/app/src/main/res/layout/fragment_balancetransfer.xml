<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_bg"
    android:orientation="vertical">

    <com.sunapp.bloc.common.widgets.NTitleBar
        android:id="@+id/backTitleBalanceTransfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backText="返回"
        app:moreText="0.0"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/all_bg"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="16dp"
            android:gravity="center|left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="转出："
                android:textColor="@color/textview_hight"
                android:textSize="15sp" />


                <TextView
                    android:id="@+id/tvBalanceTransferOut"
                    android:background="@mipmap/icon_textview_transfer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:textColor="#868686"
                    android:textSize="15sp"
                    android:text="请选择平台 " />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"

            android:layout_marginRight="40dp"
            android:layout_marginLeft="16dp"
            android:gravity="center|left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="转入："
                android:textColor="@color/textview_hight"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvBalanceTransferIn"
                android:background="@mipmap/icon_textview_transfer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textColor="#868686"
                android:text="请选择平台 " />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"
            android:layout_marginLeft="16dp"
            android:gravity="center|left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="金额："
                android:textColor="@color/textview_hight"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:background="@mipmap/icon_edittext_transfer">

                <EditText
                    android:id="@+id/etBalanceTransferMoney"
                    android:layout_width="104dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入转换金额"
                    android:inputType="number"
                    android:textColor="@color/n_edittext_pwd"
                    android:textColorHint="#868686"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp"
                    android:textColor="#868686"
                    android:text="元  " />

            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color"
            />
        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全转："
                android:textColor="@color/textview_hight"
                android:visibility="gone"
                android:textSize="15sp" />
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="#868686"
                android:textSize="12sp"
                android:padding="10dp"
                android:layout_margin="8dp"
                android:background="@drawable/btn_balance_transfer"
                />-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvBalanceTransfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color"
            />
        <Button
            android:id="@+id/btnBalanceTrensferSubmit"
            android:layout_width="match_parent"
            android:text="确 定"
            android:background="@drawable/btn_inquire"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:layout_height="@dimen/h_tbn_height" />



        <LinearLayout
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textview_hight"
                android:textSize="15sp"
                android:text="温馨提示：\n"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textview_hight"
                android:textSize="12sp"
                android:text="1、 转账前请退出游戏或游戏投注界面。\n\n2、不参与活动时, 户内转账金额不能少于 1元，户内转账\n不收取任何手续费。\n\n3、如遇网速较慢时，请耐心等候片刻，不要多次重复提交。"
                />
        </LinearLayout>




    </LinearLayout>
</LinearLayout>