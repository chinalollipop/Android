<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/home_title_bg">

            <TextView
                android:id="@+id/tvHomePageLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/line_choice"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="线路1"
                android:textColor="@color/title_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/home_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivHomePageLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/home_lo_re" />

                <TextView
                    android:id="@+id/tvHomePageLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登陆/注册"
                    android:textColor="@color/title_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvHomePageUserMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:drawableLeft="@mipmap/title_right"
                android:textColor="@color/title_text"
                android:textSize="16sp"
                android:visibility="gone" />

        </RelativeLayout>


        <com.jude.rollviewpager.RollPagerView
            android:id="@+id/rollpageview"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_margin="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="公告"
                android:textColor="#47444c"
                android:textStyle="bold" />

            <com.sunapp.bloc.common.widgets.MarqueeTextView
                android:id="@+id/tv_homapage_bulletin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/home_center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/homeUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="未登录"
                android:textColor="@color/btn_text"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/homeUserCenter"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/homeMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="￥0.00"
                    android:textSize="12sp"
                    android:textColor="@color/event_line_title" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="中心钱包"
                    android:textSize="11sp"
                    android:textColor="#5c5c5c" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="50dp">
                <TextView
                    android:background="#5c5c5c"
                    android:layout_width="1px"
                    android:layout_marginBottom="4dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/homeDeposite1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableTop="@mipmap/home_center1"
                    android:textColor="#5c5c5c"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:text="存款"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/homeDeposite2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#5c5c5c"
                    android:textSize="11sp"
                    android:drawableTop="@mipmap/home_center2"
                    android:text="转账"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/homeDeposite3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#5c5c5c"
                    android:textSize="11sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableTop="@mipmap/home_center3"
                    android:text="取款"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_homepage_game_hall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fadeScrollbars="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <!--真人视讯-->
            <LinearLayout
                android:id="@+id/homeItem15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/homeItem15_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/home_video1" />

                <ImageView
                    android:id="@+id/homeItem15_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@mipmap/home_video2" />

            </LinearLayout>
            <!--彩票-->
            <LinearLayout
                android:id="@+id/homeItem16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/homeItem16_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/home_item_16_1" />

                <ImageView
                    android:id="@+id/homeItem16_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@mipmap/home_item_16_2" />
            </LinearLayout>

            <!--体育-->
            <LinearLayout
                android:id="@+id/homeItem17"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/homeItem17_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/home_item_17_1" />
            </LinearLayout>
            <!--电子游戏-->
            <LinearLayout
                android:id="@+id/homeItem18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/homeItem18_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/home_item_18_1" />

                <ImageView
                    android:id="@+id/homeItem18_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@mipmap/home_item_18_2" />
            </LinearLayout>

            <!--棋牌-->
            <LinearLayout
                android:id="@+id/homeItem19"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/homeItem19_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/home_qp_vg" />

                <ImageView
                    android:id="@+id/homeItem19_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@mipmap/home_qp_ly" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/homeItem19_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@mipmap/home_qp_hg" />

                    <ImageView
                        android:id="@+id/homeItem19_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@mipmap/home_qp_ky" />
                </LinearLayout>
            </LinearLayout>

            <!--电子竞技-->
            <LinearLayout
                android:id="@+id/homeItem20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/homeItem20_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/home_item_20_1" />
            </LinearLayout>
            <!--捕鱼游戏-->
            <LinearLayout
                android:id="@+id/homeItem21"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/homeItem21_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/home_item_21_1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>