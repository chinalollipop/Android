<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_btn_white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/itemBetDragonImg"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/gf_ffc" />

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemDragonlotteryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢乐生肖"
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/itemDragoncurrIssue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20190406030"
                android:textColor="#000" />


        </LinearLayout>
        <com.cfcp.a01.common.widget.TimeTextView
            android:id="@+id/itemDragonlotteryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="00:00"
            android:textColor="#ff2323" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/itemDragonplayCateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_gray"
                android:text="欢乐生肖"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/itemDragonplayName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_btn_green"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text=" 小 "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/itemDragonlotteryCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_login_text"
                android:text="10期"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemDragonBetLayName1"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_deposit_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemDragonBetName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大"
            android:layout_gravity="center"
            android:textColor="#dc3b40"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/itemDragonBetOdds1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赔1.94"
            android:textColor="#989898"
            android:layout_margin="5dp"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemDragonBetLayName2"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_deposit_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemDragonBetName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小"
            android:layout_gravity="center"
            android:textColor="#dc3b40"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/itemDragonBetOdds2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赔1.94"
            android:layout_margin="5dp"
            android:textColor="#989898"
            android:textSize="12sp" />
    </LinearLayout>
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="1dp"
        android:background="#e4e1e1" />-->

</LinearLayout>