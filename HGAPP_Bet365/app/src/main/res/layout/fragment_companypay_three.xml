<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hgapp.bet365.common.widgets.NTitleBar
        android:id="@+id/tvCompanyPayBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backText="返回" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="汇款金额"
            android:textColor="@color/textview_hight"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/etDepositCompanyPayMoney"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入汇款金额"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:gravity="center|left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速设置金额："
            android:textColor="@color/textview_hight"
            android:textSize="15sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvBalanceTransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="存款人姓名"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/etDepositCompanyPayName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入存款人姓名"

            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="汇款方式"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvDepositCompanyPayChannel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/icon_textview_transfer"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="请选择汇款方式" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="汇款日期"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvDepositCompanyPayTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/icon_textview_transfer"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:text="选择日期" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp"
        android:gravity="left|center">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="存款备注"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/edDepositCompanyPayRemark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="可填入银行转账单号等信息" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnDepositCompanyPaySubmit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/h_tbn_height"
            android:layout_weight="1"
            android:text="提交信息" />

        <Button
            android:id="@+id/btnDepositCompanyPaySubmitReset"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/h_tbn_height"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="重新填写" />
    </LinearLayout>
    <TextView
        android:layout_margin="5dp"
        android:text="汇款信息提交说明：\n 1，请按表格填写准确的汇款转账信息，确认提交后相关财务人员会及时为您查询入款情况！\n2，请您在转账金额后面加个位数，例如：转账金额1000.66或1000.88等，以便相关财务人员更快确认您的转账金额并充值！\n3，如有任何疑问，您可以联系在线客服，在线客服为您提供365天X24小时不间断的友善和专业客户咨询服务！"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>