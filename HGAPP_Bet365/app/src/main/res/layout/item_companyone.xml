<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_text"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llItemMySelf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivItemMyImage"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
        <LinearLayout
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvItemMyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="3dp"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/color_bg_dialog"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/ivItemMyCont"
                android:text="ssss"
                android:textColor="@color/event_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/ivItemMyUser"
                android:text="ssss"
                android:textColor="@color/color_bg_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/ivItemMyNote"
                android:text="ssss"
                android:textColor="@color/event_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>