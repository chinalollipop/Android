                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/llRegisterVerificationCode"
                            android:layout_width="@dimen/h_text_width"
                            android:layout_height="@dimen/h_text_height"
                            android:layout_gravity="center"
                            android:background="@color/login_left">

                            <TextView
                                android:id="@+id/tvRegisterVerificationCode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="30dp"
                                android:text="* 验证码"
                                android:textColor="@color/register_left"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etRegisterVerificationCode"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/h_text_height"
                            android:layout_toLeftOf="@+id/registerVerificationCodeView"
                            android:layout_toRightOf="@+id/llRegisterVerificationCode"
                            android:hint="输入验证码"
                            android:maxLength="4" />

                        <com.venen.tian.common.widgets.verifycodeview.VerificationCodeView
                            android:id="@+id/registerVerificationCodeView"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/h_text_height"
