                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRegisterPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_width="@dimen/h_text_width"
                            android:layout_height="@dimen/h_text_height"
                            android:layout_gravity="center"
                            android:background="@color/login_left">

                            <TextView
                                android:id="@+id/tvRegisterPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="30dp"
                                android:text="* 手机号"
                                android:textColor="@color/register_left"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etRegisterPhone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="手机号码(必填）"
                            android:maxLength="14"

                            />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="@dimen/h_text_width"
                            android:layout_height="@dimen/h_text_height"
                            android:layout_gravity="center"
                            android:background="@color/login_left">

                            <TextView
                                android:id="@+id/tvRegisterPhonePwd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="30dp"
                                android:text="* 密码"
                                android:textColor="@color/register_left"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etRegisterPhonePwd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="8-16个字符长度字母或数字组成"
                            android:maxLength="16"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="@dimen/h_text_width"
                            android:layout_height="@dimen/h_text_height"
                            android:layout_gravity="center"
                            android:background="@color/login_left">

                            <TextView
                                android:id="@+id/tvRegisterPhoneVerificationCode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="30dp"
                                android:text="* 验证码"
                                android:textColor="@color/register_left"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/h_text_height">

                            <EditText
                                android:id="@+id/etRegisterPhoneVerificationCode"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/h_text_height"
                                android:hint="输入验证码" />

                            <Button
                                android:id="@+id/btnRegisterGetVerificationCode"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_margin="5dp"
                                android:text="获取验证码"
                                android:textSize="12sp" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/cbRegisterProtocol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/btn_check_style"
                        android:checked="true"
                        android:paddingLeft="5dp"
                        android:text="同意本站"
                        android:textColor="@color/register_left"
                        android:textSize="16sp" />
                    <TextView
                        android:text="《协议条款》"
                        android:textColor="#f9f001"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <Button
                    android:id="@+id/btnRegisterSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_login_edit_height"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="注册"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>