                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h_login_edit_height"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_normal_gray">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/login_uname" />


                        <EditText
                            android:id="@+id/etRegisterUserName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="账号5-15个字符，英文需小写"
                            android:maxLength="15"
                            android:textColor="@color/register_left"
                            android:textColorHint="@color/register_left" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h_login_edit_height"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_normal_gray">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/login_pwd" />

                        <EditText
                            android:id="@+id/etRegisterPwd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="密码6-15个字母或数字组成"
                            android:inputType="textPassword"
                            android:maxLength="15"
                            android:textColor="@color/register_left"
                            android:textColorHint="@color/register_left"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h_login_edit_height"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_normal_gray">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/login_pwd" />

                        <EditText
                            android:id="@+id/etRegisterPwdVerify"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="再次输入密码"
                            android:inputType="textPassword"
                            android:maxLength="15"
                            android:textColor="@color/register_left"
                            android:textColorHint="@color/register_left"

                            />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="@dimen/h_text_width"
                            android:layout_height="@dimen/h_text_height"
                            android:layout_gravity="center"
                            android:background="@color/login_left">

                            <TextView
                                android:id="@+id/tvRegisterRealName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="30dp"
                                android:text="* 真实姓名"
                                android:textColor="@color/register_left"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etRegisterWithDrawName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="与提款银行卡一致，否则无法提款"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="@dimen/h_text_width"
                            android:layout_height="@dimen/h_text_height"
                            android:layout_gravity="center"
                            android:background="@color/login_left">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="30dp"
                                android:text="* 提款密码"
                                android:textColor="@color/register_left"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etRegisterWithDrawPwd"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="请输入提款密码(6位纯数字)"
                            android:inputType="numberPassword" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h_login_edit_height"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_normal_gray">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/login_phone" />

                        <EditText
                            android:id="@+id/etRegisterAccountPhone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="请输入11位手机号码"
                            android:inputType="number"
                            android:maxLength="11"
                            android:textColor="@color/register_left"
                            android:textColorHint="@color/register_left" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginTop="10dp"
                        android:text="* 请认真填写,以便有优惠活动可以及时通知您参与！"
                        android:textColor="@color/home_item_normal"
                        android:textSize="11sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="@dimen/h_text_width"
                            android:layout_height="@dimen/h_text_height"
                            android:layout_gravity="center"
                            android:background="@color/login_left">

                            <TextView
                                android:id="@+id/tvRegisterEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="30dp"
                                android:text="* 微信"
                                android:textColor="@color/register_left"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etRegisterWechat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="微信号码"

                            />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="@dimen/h_text_width"
                            android:layout_height="@dimen/h_text_height"
                            android:layout_gravity="center"
                            android:background="@color/login_left">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="30dp"
                                android:text="* 出生日期"
                                android:textColor="@color/register_left"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etRegisterBrithday"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@mipmap/icon_textview_transfer"
                            android:focusable="false"
                            android:hint="请填写出生年月日"
                            android:inputType="time"

                            />
                    </LinearLayout>

