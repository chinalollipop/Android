<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/iconFlayBg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="475dp"
        android:layout_height="285dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/my_infor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="65dp">

                <ImageView
                    android:id="@+id/iconUserIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/icon_v5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginRight="65dp">

                        <EditText
                            android:id="@+id/iconEditName"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@mipmap/bg_et"
                            android:imeOptions="flagNoExtractUi|flagNoFullscreen"
                            android:paddingLeft="10dp"
                            android:text="幽雪沫儿"
                            android:textColor="@color/register_left"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/iconEditNameBi"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:background="@mipmap/icon_bi" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h_text_height"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="65dp">

                        <TextView
                            android:id="@+id/iconUserId"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="ID:888888"
                            android:textColor="@color/register_left"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/iconCopyId"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/register_me"
                            android:gravity="center"
                            android:text="复制" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="140dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="left"
                        android:background="@mipmap/home_money"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/home_gold" />

                        <TextView
                            android:id="@+id/iconUserMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:shadowColor="#815258"
                            android:shadowRadius="1"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:text="0"
                            android:textColor="#d09f2d" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/home_gold_plus"
                            android:visibility="invisible" />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:layout_height="25dp"
                android:layout_marginRight="65dp">

                <EditText
                    android:id="@+id/iconEditUserSignature"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@mipmap/bg_et"
                    android:imeOptions="flagNoExtractUi|flagNoFullscreen"
                    android:paddingLeft="10dp"
                    android:text="这家伙很懒，什么都没有留下"
                    android:textColor="@color/register_left"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iconEditUserSignatureBi"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/icon_bi" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp">

                <TextView
                    android:id="@+id/iconChangeIcon"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/get_verify_code"
                    android:gravity="center"
                    android:text="更换头像" />


                <TextView
                    android:id="@+id/iconBindPhone"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/get_verify_code"
                    android:gravity="center"
                    android:text="绑定手机" />


                <TextView
                    android:id="@+id/iconChangeUser"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/register_me"
                    android:gravity="center"
                    android:text="切换账号" />

            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iconClose"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp" />
    </FrameLayout>

</RelativeLayout>