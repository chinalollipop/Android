<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="475dp"
        android:layout_height="285dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/notice">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="46dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/noticeTView"
                android:text="欢迎来到《乐游棋牌》平台\n\n您再这里可以享受到最公平最休闲的娱乐球游戏\n您可以通过客服随时咨询反馈\n您可以通过兑换，提现您的盈利\n您可以通过商城进行充值\n您可以保存我们的官网地址\n您可以邀请好友一起来玩哟"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <ImageView
            android:id="@+id/noticeClose"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp" />
    </FrameLayout>

</RelativeLayout>