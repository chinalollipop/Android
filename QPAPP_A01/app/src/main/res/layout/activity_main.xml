<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/flayout_xpay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <com.tencent.smtt.sdk.WebView
        android:id="@+id/wv_pay_x5_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.coolindicator.sdk.CoolIndicator
        android:id="@+id/indicator"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/default_drawable_indicator"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
    <RelativeLayout
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/gameBack"
        android:background="@mipmap/game_back"
        android:layout_width="50dp"
        android:layout_height="40dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>