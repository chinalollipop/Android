<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="@mipmap/bg_login_fragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="35dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_text_height"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="50dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:layout_marginLeft="30dp"
                        android:text="账号"
                        android:textColor="@color/register_left"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/loginAccount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@mipmap/register_edit"
                        android:hint="请输入账号"
                        android:imeOptions="flagNoExtractUi|flagNoFullscreen"
                        android:maxLength="15"
                        android:paddingLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_text_height"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:layout_marginLeft="30dp"
                        android:text="密码"
                        android:textColor="@color/register_left"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/registerPwd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@mipmap/register_edit"
                        android:hint="请输入密码"
                        android:imeOptions="actionNext|flagNoFullscreen"
                        android:maxLength="12"
                        android:paddingLeft="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:layout_marginLeft="60dp"
                        android:layout_toLeftOf="@+id/loginRemeberPwd"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="密码"
                        android:visibility="invisible"
                        android:textColor="@color/register_left"
                        android:textSize="15sp" />
                    <RelativeLayout
                        android:layout_marginRight="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/loginRemeberPwd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="记住密码"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/register_left"
                        android:button="@drawable/btn_check_style"
                        android:paddingLeft="5dp"
                        />

                    <TextView
                        android:id="@+id/loginForgetPwd"
                        android:textColor="@color/register_left"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="忘记密码"
                        />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/loginSubmit"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/login_imv" />

            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/loginClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@mipmap/register_close" />
    </FrameLayout>

</RelativeLayout>