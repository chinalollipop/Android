<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/title_bg">

            <TextView
                android:id="@+id/tvHomePageLine"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/line_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线路1"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/title_text"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/home_logo" />

            <TextView
                android:id="@+id/tvHomePageLogin"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="登陆/注册"
                android:textColor="@color/title_text"
                android:textSize="14sp" />
            <TextView
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/title_right"
                android:id="@+id/tvHomePageUserMoney"
                android:textColor="@color/title_text"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.jude.rollviewpager.RollPagerView
            android:id="@+id/rollpageview"
            android:layout_width="match_parent"
            android:layout_height="144dp" />
            <ImageView
                android:id="@+id/home_sign"
                android:background="@mipmap/home_sign"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86px"
            android:gravity="center"
            android:background="#f0efef"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="43px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/home_notice" />

            <com.hgapp.a0086.common.widgets.MarqueeTextView
                android:id="@+id/tv_homapage_bulletin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="33px"
                android:background="#f0efef"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="#666666"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_homepage_game_hall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="33px"
            android:fadeScrollbars="true" />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom">

            <ImageView
                android:id="@+id/home_newyear"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:background="@mipmap/home_newyear" />

            <ImageView
                android:id="@+id/home_newyearcancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right" />
            <TextView
                android:id="@+id/home_newyeartime"
                android:text="活动即将开启"
                android:textSize="6sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center|bottom" />
        </FrameLayout>



    </FrameLayout>

</LinearLayout>