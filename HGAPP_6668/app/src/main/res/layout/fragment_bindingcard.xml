<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.hgapp.a6668.common.widgets.NTitleBar
        android:id="@+id/tvBindingCardCBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backText="返回" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp"
        android:gravity="left|center">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="帐户姓名"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvBindingCardAccountName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:paddingLeft="10dp"
            android:hint="请输入账户姓名"
            android:gravity="left|center"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp"
        android:gravity="left|center">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="银行名称"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvBindingCardBankName"
            android:background="@mipmap/icon_textview_transfer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:paddingLeft="10dp"
            android:gravity="left|center"
            android:text="请选择银行"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp"
        android:gravity="left|center">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="银行账户"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/tvBindingCardBankCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="left|center"
            android:hint="请输入账(卡)号"
            android:textSize="15sp" />
    </LinearLayout>

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:visibility="gone"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp"
        android:gravity="left|center">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="银行省分"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvBindingCardBankState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/icon_textview_transfer"
            android:layout_marginLeft="15dp"
            android:paddingLeft="10dp"
            android:text="请选择"
            android:gravity="left|center"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp"
        android:gravity="left|center">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="银行地址"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/tvBindingCardBankAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:hint="请输入银行地址"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp"
        android:gravity="left|center">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="TRC20提币地址"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvBindingCardUSDTAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textSize="15sp" />

    </LinearLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:text="注：如需修改提币地址，请联系客服"
        android:textColor="@color/cp_order_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />
    <LinearLayout
        android:id="@+id/llBindingCardPwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp"
        android:gravity="left|center">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="提款密码"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/tvBindingCardPwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:inputType="textPassword"
            android:hint="请输入提款密码"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />
    <LinearLayout
        android:id="@+id/llBindingCardPwd2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp"
        android:gravity="left|center">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/tvBindingCardPwd2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:hint="请输入确认密码"
            android:inputType="textPassword"
            android:textSize="15sp" />
    </LinearLayout>
    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:visibility="gone"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp"
        android:gravity="left|center">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="县市"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/tvBindingCardTownsName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:hint="请输入县市名称"
            android:textSize="15sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <Button
        android:id="@+id/tvBindingCardSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_tbn_height"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:text="确认绑定" />
</LinearLayout>