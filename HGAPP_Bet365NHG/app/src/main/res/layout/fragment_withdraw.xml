<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.hgapp.betnhg.common.widgets.NTitleBar
        android:id="@+id/tvWithdrawBankBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backText="返回" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_login_noram_d"
        android:gravity="left|center"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="提款打码量"
            android:textColor="@color/account_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvWithdrawOweBet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:gravity="left|center"
            android:text=""
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_login_noram_d"
        android:gravity="left|center"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="已打码量"
            android:textColor="@color/account_text"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvWithdrawTotalBet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:gravity="left|center"
                android:text=""
                android:textSize="15sp" />

            <Button
                android:id="@+id/tvWithdrawTotalBetDetail"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="查看详情" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_login_noram_d"
        android:gravity="left|center"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="开户行"
            android:textColor="@color/account_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvWithdrawBankAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:gravity="left|center"
            android:text=""
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_login_noram_d"
        android:gravity="left|center"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/bankRButton"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="银行账号"
            android:drawableLeft="@drawable/cert_selet"
            android:textColor="@color/account_text"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvWithdrawBankAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:gravity="left|center"
            android:text=""
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:background="@drawable/btn_login_noram_d"
        android:gravity="left|center">

        <TextView
            android:id="@+id/usdtRButton"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/cert_no_select"
            android:text="USDT(TRC20)"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvWithdrawUsdtAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="left|center"
            android:text=""
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layUsdtRate"
        android:background="@drawable/btn_login_noram_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        android:gravity="center"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="USDT汇率"
            android:textSize="15sp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="USDT提币数量："
                    android:textSize="15sp" />
                <TextView
                    android:textColor="#FF0000"
                    android:id="@+id/tvWithdrawUsdtMoney"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:textSize="15sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvWithdrawUsdtRate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="实时汇率："
                android:inputType="number"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_login_noram_d"
        android:gravity="left|center"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/bankName"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="所在银行"
            android:textColor="@color/account_text"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvWithdrawBankName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:gravity="left|center"
            android:text=""
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_login_noram_d"
        android:gravity="left|center"
        android:paddingLeft="10dp">


        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="提款金额"
            android:textColor="@color/account_text"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/tvWithdrawBankMoney"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:hint="请输入提款金额"
            android:inputType="number"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_login_noram_d"
        android:gravity="left|center"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="提款密码"
            android:textColor="@color/account_text"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/tvWithdrawBankPwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:hint="请输入提款密码"
            android:inputType="numberPassword"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/tvWithdrawBankSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_tbn_height"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"
        android:text="确认提款" />
</LinearLayout>