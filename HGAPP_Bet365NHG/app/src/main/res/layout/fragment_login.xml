<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bk_normal">

    <!--<com.hgapp.m8.common.widgets.HGControlVideo
        android:id="@+id/hgControlVideoPlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />-->

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.hgapp.betnhg.common.widgets.NTitleBar
                android:id="@+id/tvLoginBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backText="返回"
                app:moreText="注册"
                app:moreTextOnly="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/home_logo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/btn_normal_top"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/btnLoginUser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_normal_top_click"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="登 录"
                        android:textColor="@color/register_left"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/btnLoginRegister"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="注 册"
                        android:textColor="@color/register_left"
                        android:textSize="20sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/fgtLogin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_login_name">

                        <LinearLayout
                            android:layout_width="42dp"
                            android:layout_height="43dp"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivLoginType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@mipmap/login_uname" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etLoginType"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="登录帐号"
                            android:inputType="text"
                            android:textColor="@color/textview_hight"
                            android:textColorHint="@color/textview_hight" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_login_name">

                        <LinearLayout
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/tvLoginPwd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@mipmap/login_pwd" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/etLoginPwd"
                                android:layout_width="match_parent"
                                android:layout_height="43dp"
                                android:background="@null"
                                android:hint="会员密码"
                                android:inputType="textPassword"
                                android:maxLength="15"
                                android:textColor="@color/textview_hight"
                                android:textColorHint="@color/textview_hight" />

                            <ImageView
                                android:id="@+id/etLoginEyes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="10dp"
                                android:background="@mipmap/icon_eye_close" />
                        </RelativeLayout>

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/cbLoginRemeber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="记住手机号"
                        android:textColor="@color/textview_hight"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp">

                        <CheckBox
                            android:id="@+id/loginRemeberPwd"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"
                            android:button="@drawable/btn_check_r_style"
                            android:paddingLeft="5dp"
                            android:text="记住帐号"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/tvLoginForgetPwd"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="忘记密码？"
                            android:textColor="#ffffff" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/btnLoginSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h_login_edit_height"
                        android:background="@drawable/btn_normal"
                        android:text="立即登录"
                        android:textSize="22sp" />


                    <Button
                        android:id="@+id/btnLoginDemo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h_login_edit_height"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/btn_normal_bottom"
                        android:text="先去逛逛"
                        android:textColor="#6ca7eb"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnLoginLayDemo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <LinearLayout
                        android:background="@drawable/btn_login_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h_login_edit_height"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/login_phone" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="*手机号"
                            android:textColor="@color/login_left"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/etRegisterAccountPhoneDemo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="请输入11位手机号码"
                            android:inputType="number"
                            android:maxLength="11"
                            android:textColor="@color/login_left"
                            android:textColorHint="@color/login_left" />
                    </LinearLayout>


                    <Button
                        android:id="@+id/btnRegisterSubmitDemo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h_login_edit_height"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:text="提 交"
                        android:textSize="22sp" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fgtResgiter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp">

                                <LinearLayout
                                    android:id="@+id/llRegisterAccount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/h_login_edit_height"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/btn_login_nore">


                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="10dp"
                                            android:background="@mipmap/login_into" />

                                        <TextView
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="介绍人"
                                            android:textColor="@color/register_left_new"
                                            android:textSize="16sp" />

                                        <EditText
                                            android:id="@+id/etRegisterIntro"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@null"
                                            android:hint="没有可不填写"
                                            android:maxLength="15"
                                            android:textColor="@color/register_left_new"
                                            android:textColorHint="@color/register_left_new" />
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/h_login_edit_height"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/btn_login_nore">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="10dp"
                                            android:background="@mipmap/login_uname" />

                                        <TextView
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="*账号"
                                            android:textColor="@color/register_left_new"
                                            android:textSize="16sp" />

                                        <EditText
                                            android:id="@+id/etRegisterUserName"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@null"
                                            android:hint="5-15个字符，英文需小写"
                                            android:maxLength="15"
                                            android:textColor="@color/register_left_new"
                                            android:textColorHint="@color/register_left_new" />
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/h_login_edit_height"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/btn_login_nore">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="10dp"
                                            android:background="@mipmap/login_pwd" />

                                        <TextView
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="*密码"
                                            android:textColor="@color/register_left_new"
                                            android:textSize="16sp" />

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <EditText
                                                android:id="@+id/etRegisterPwd"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@null"
                                                android:hint="6-15个字母或数字组成"
                                                android:inputType="textPassword"
                                                android:maxLength="15"
                                                android:textColor="@color/register_left_new"
                                                android:textColorHint="@color/register_left_new"

                                                />

                                            <ImageView
                                                android:id="@+id/etRegisterPwdEyes"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentRight="true"
                                                android:layout_centerInParent="true"
                                                android:layout_marginRight="10dp"
                                                android:background="@mipmap/icon_eye_close" />
                                        </RelativeLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/h_login_edit_height"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/btn_login_nore">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="10dp"
                                            android:background="@mipmap/login_pwd" />

                                        <TextView
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="*确认密码"
                                            android:textColor="@color/register_left_new"
                                            android:textSize="16sp" />

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <EditText
                                                android:id="@+id/etRegisterPwdVerify"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@null"
                                                android:hint="6-15个字母或数字组成"
                                                android:inputType="textPassword"
                                                android:maxLength="15"
                                                android:textColor="@color/register_left_new"
                                                android:textColorHint="@color/register_left_new"

                                                />

                                            <ImageView
                                                android:id="@+id/etRegisterPwdVerifyEyes"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentRight="true"
                                                android:layout_centerInParent="true"
                                                android:layout_marginRight="10dp"
                                                android:background="@mipmap/icon_eye_close" />
                                        </RelativeLayout>
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="@dimen/h_text_width"
                                            android:layout_height="@dimen/h_text_height"
                                            android:layout_gravity="center"
                                            android:background="@color/login_left">

                                            <TextView
                                                android:id="@+id/tvRegisterRealName"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_marginLeft="30dp"
                                                android:text="* 真实姓名"
                                                android:textColor="@color/register_left_new"
                                                android:textSize="15sp" />
                                        </LinearLayout>

                                        <EditText
                                            android:id="@+id/etRegisterWithDrawName"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:hint="与提款银行卡一致，否则无法提款"

                                            />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="@dimen/h_text_width"
                                            android:layout_height="@dimen/h_text_height"
                                            android:layout_gravity="center"
                                            android:background="@color/login_left">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_marginLeft="30dp"
                                                android:text="* 提款密码"
                                                android:textColor="@color/register_left_new"
                                                android:textSize="15sp" />
                                        </LinearLayout>

                                        <EditText
                                            android:id="@+id/etRegisterWithDrawPwd"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:hint="请输入提款密码(6位纯数字)"
                                            android:inputType="numberPassword" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/layLineTel"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/h_login_edit_height"
                                            android:layout_marginTop="5dp"
                                            android:background="@drawable/btn_login_nore">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_marginLeft="10dp"
                                                android:background="@mipmap/login_phone" />

                                            <TextView
                                                android:layout_width="90dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text="*手机号"
                                                android:textColor="@color/register_left_new"
                                                android:textSize="16sp" />

                                            <EditText
                                                android:id="@+id/etRegisterAccountPhone"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@null"
                                                android:hint="请输入11位手机号码"
                                                android:inputType="number"
                                                android:maxLength="11"
                                                android:textColor="@color/register_left_new"
                                                android:textColorHint="@color/register_left_new" />
                                        </LinearLayout>


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center|left"
                                            android:layout_marginTop="10dp"
                                            android:text="* 请认真填写,以便有优惠活动可以及时通知您参与！"
                                            android:textColor="#fe0100"
                                            android:textSize="13sp" />

                                    </LinearLayout>


                                    <LinearLayout
                                        android:id="@+id/layLineWeChat"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/h_login_edit_height"
                                            android:background="@drawable/btn_login_nore">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_marginLeft="10dp"
                                                android:background="@mipmap/login_wechat" />

                                            <TextView
                                                android:layout_width="90dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text="* 微信号码"
                                                android:textColor="@color/register_left_new"
                                                android:textSize="15sp" />

                                            <EditText
                                                android:id="@+id/etRegisterWeChat"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@null"
                                                android:hint="请填写微信号码"
                                                android:textColor="@color/register_left_new"
                                                android:textColorHint="@color/register_left_new" />
                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/layLineQQ"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/h_login_edit_height"
                                            android:background="@drawable/btn_login_nore">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_marginLeft="10dp"
                                                android:background="@mipmap/login_qq" />

                                            <TextView
                                                android:layout_width="90dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text="* QQ号码"
                                                android:textColor="@color/register_left_new"
                                                android:textSize="15sp" />

                                            <EditText
                                                android:id="@+id/etRegisterBrithday"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@null"
                                                android:hint="请填写QQ号码"
                                                android:textColor="@color/register_left_new"
                                                android:textColorHint="@color/register_left_new" />
                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:layout_marginTop="10dp">

                                        <TextView
                                            android:id="@+id/tvRegisterResource"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="如何得知本网站"
                                            android:textColor="#525252"
                                            android:textSize="16sp" />

                                        <EditText
                                            android:id="@+id/etRegisterResource"
                                            android:layout_width="100dp"
                                            android:layout_height="40dp"
                                            android:layout_marginLeft="30dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="1dp"
                                            android:background="@drawable/btn_normal_bottom"
                                            android:focusable="false"
                                            android:gravity="center"
                                            android:hint="网络广告 >"
                                            android:padding="5dp"
                                            android:textColor="@color/register_left_new"
                                            android:textColorHint="@color/register_left_new" />


                                    </LinearLayout>

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp">

                                    <CheckBox
                                        android:id="@+id/cbRegisterProtocol"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:button="@drawable/btn_check_r_style"
                                        android:checked="true"
                                        android:paddingLeft="5dp"
                                        android:text="我已阅读并同意相关的"
                                        android:textColor="#525252"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="条款和隐私政策"
                                        android:textColor="@color/register_left_new"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <Button
                                    android:id="@+id/btnRegisterSubmit"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/h_login_edit_height"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="20dp"
                                    android:background="@drawable/btn_normal_login"
                                    android:text="注 册"
                                    android:textSize="22sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="bottom"
        android:background="@mipmap/login_bg_bottom"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还没有帐号？请 "
                android:textColor="@color/register_left"
                android:textSize="17sp" />

