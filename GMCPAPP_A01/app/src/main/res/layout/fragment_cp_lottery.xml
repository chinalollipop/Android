<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@mipmap/cp_title"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/backHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/cp_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="开奖结果"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center|left"
        >

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cpLotteryName"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/n_edittext_stroke"
                android:drawableRight="@mipmap/icon_ex_down"
                android:drawablePadding="5dp"
                android:padding="6dp"
                android:text="欢乐生肖"
                android:textColor="@color/cp_hall_tv" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="期数"
                android:textColor="@color/cp_hall_tv" />

        </LinearLayout>

        <View
            android:layout_marginRight="10dp"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/n_editText_hint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cpLotteryTime"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@color/n_edittext_stroke"
                android:drawableRight="@mipmap/icon_ex_down"
                android:drawablePadding="10dp"
                android:padding="6dp"
                android:text="今日的时间"
                android:textColor="@color/cp_hall_tv" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="开奖号码"
                android:textColor="@color/cp_hall_tv" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/n_editText_hint" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cpLotteryList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>