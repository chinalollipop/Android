<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <com.hfcp.hf.common.widget.NTitleBar
        android:id="@+id/recordBetAddBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backText="返回"
        app:moreTextOnly="true"
        app:titleText="追号记录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/recordBetAddStartTime"
            android:text="开始时间"
            android:layout_weight="1"
            android:gravity="center|start"
            android:drawableRight="@mipmap/icon_ex_down"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#e4e1e1"
            />
        <TextView
            android:id="@+id/recordBetAddEndTime"
            android:text="结束时间"
            android:layout_weight="1"
            android:gravity="center|start"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawableRight="@mipmap/icon_ex_down"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#e4e1e1"
            />
        <TextView
            android:id="@+id/recordBetAddGameStyle"
            android:text="所有游戏"
            android:layout_weight="1"
            android:gravity="center|start"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawableRight="@mipmap/icon_ex_down"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#e4e1e1"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recordBetAddRView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
</LinearLayout>