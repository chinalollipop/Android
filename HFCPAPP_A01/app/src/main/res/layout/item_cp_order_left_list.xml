<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/cp_order_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/itemOrderLeftListIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/cp_circle_normal" />
    <TextView
        android:id="@+id/itemOrderLeftListTV"
        android:background="@drawable/bg_cp_oder_left_normal"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="5dp"
        android:text="AG真人"
        android:textSize="15sp" />
    <TextView
        android:background="@color/n_editText_hint"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>