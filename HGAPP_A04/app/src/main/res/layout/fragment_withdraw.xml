<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.hg3366.a3366.common.widgets.NTitleBar
        android:id="@+id/tvWithdrawBankBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backText="返回" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@mipmap/bind_card_midd"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"
            android:layout_margin="10dp"
            android:gravity="left|center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="开户行"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvWithdrawBankAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:drawableRight="@mipmap/bind_card_adk"
                android:gravity="left|center"
                android:text=""
                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left|center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="银行账号"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tvWithdrawBankAccount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:drawableRight="@mipmap/bind_card_adk"
                android:gravity="left|center"
                android:text=""
                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"
            android:layout_margin="10dp"
            android:gravity="left|center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="所在银行"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tvWithdrawBankName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:gravity="left|center"
                android:text=""
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBindingCardPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@mipmap/bind_card_bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"
            android:layout_margin="10dp"
            android:gravity="left|center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="提款金额"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/tvWithdrawBankMoney"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:hint="请输入提款金额"
                android:inputType="number"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="left|center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="提款密码"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/tvWithdrawBankPwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:hint="请输入提款密码"
                android:inputType="numberPassword"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/tvWithdrawBankSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_tbn_height"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/btn_inquire"
        android:text="确认提款" />
</LinearLayout>