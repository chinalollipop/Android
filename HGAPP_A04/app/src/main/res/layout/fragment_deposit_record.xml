<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hg3366.a3366.common.widgets.NTitleBar
            android:id="@+id/tvDepositRecordBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backText="返回" />

        <LinearLayout
            android:id="@+id/llDepositRecordRemit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:background="@color/l_view_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h_edit_height"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="40dp"
                android:gravity="center|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="类别：        "
                    android:textColor="@color/textview_hight"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvDepositRecordType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/icon_textview_transfer"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="全部"
                    android:textColor="#868686"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/l_view_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:background="@color/l_view_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h_edit_height"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="40dp"
                android:gravity="center|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="状态：        "
                    android:textColor="@color/textview_hight"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvDepositRecordStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/icon_textview_transfer"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="全部"
                    android:textColor="#868686"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/l_view_color" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:background="@color/l_view_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="40dp"
            android:gravity="center|left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="开始时间："
                android:textColor="@color/textview_hight"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvDepositRecordStartTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/icon_textview_transfer"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="请选择时间 "
                android:textColor="#868686"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:background="@color/l_view_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="40dp"
            android:gravity="center|left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="结束时间："
                android:textColor="@color/textview_hight"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvDepositRecordEndTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/icon_textview_transfer"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="请选择时间 "
                android:textColor="#868686"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:background="@color/l_view_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="40dp"
            android:gravity="center|left">

            <TextView
                android:id="@+id/tvDepositRecordToday"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/bg_btn_focus"
                android:gravity="center"
                android:text="今日"
                android:textColor="@color/title_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvDepositRecordLastDay"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_btn_no_focus"
                android:gravity="center"
                android:text="昨日 "
                android:textColor="@color/n_edittext_pwd"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvDepositRecordLastWeek"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_btn_no_focus"
                android:gravity="center"
                android:text="近一周 "
                android:textColor="@color/n_edittext_pwd"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvDepositRecordLastMonth"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_btn_no_focus"
                android:gravity="center"
                android:text="本月 "
                android:textColor="@color/n_edittext_pwd"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color" />


        <Button
            android:id="@+id/btnDepositRecordSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_tbn_height"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_inquire"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="立即查询" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="订单号"
                android:textColor="@color/textview_hight"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日期/时间"
                android:textColor="@color/textview_hight"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="项目"
                android:textColor="@color/textview_hight"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="订单状态"
                android:textColor="@color/textview_hight"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="金额"
                android:textColor="@color/textview_hight"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color" />

        <TextView
            android:id="@+id/tvDepositNodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="暂时没有记录"
            android:visibility="visible" />
        <!--<ListView
            android:id="@+id/lvDepositRecord"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/lvDepositRecor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </RelativeLayout>
            <ImageView
                android:id="@+id/depositeTTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/record_top"
                android:layout_margin="20dp"
                android:visibility="gone"
                android:layout_gravity="right"
                />
        </FrameLayout>
    </LinearLayout>