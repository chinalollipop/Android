<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leancher"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/sScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="210dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:background="@mipmap/login_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:text="登 录"
                        android:textColor="@color/register_left"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_normal_login">

                        <LinearLayout
                            android:layout_width="42dp"
                            android:layout_height="43dp"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivLoginType"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:background="@mipmap/login_uname" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etLoginType"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="您的会员账号"
                            android:inputType="text"
                            android:textColor="@color/register_left"
                            android:textColorHint="@color/register_left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_normal_login">

                        <LinearLayout
                            android:layout_width="42dp"
                            android:layout_height="43dp"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/tvLoginPwd"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:background="@mipmap/login_pwd" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/etLoginPwd"
                                android:layout_width="match_parent"
                                android:layout_height="43dp"
                                android:background="@null"
                                android:hint="您的密码"
                                android:inputType="textPassword"
                                android:maxLength="15"
                                android:textColor="@color/register_left"
                                android:textColorHint="@color/register_left" />

                            <ImageView
                                android:id="@+id/etLoginEyes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="10dp"
                                android:background="@mipmap/icon_eye_close" />
                        </RelativeLayout>

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/cbLoginRemeber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="记住手机号"
                        android:textColor="@color/textview_hight"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp">

                        <CheckBox
                            android:id="@+id/loginRemeberPwd"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"
                            android:button="@drawable/btn_check_style"
                            android:paddingLeft="5dp"
                            android:text="记住密码"
                            android:textColor="@color/register_left" />

                        <TextView
                            android:id="@+id/tvLoginForgetPwd"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="忘记密码？"
                            android:textColor="@color/register_left" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/btnLoginSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h_login_edit_height"
                        android:text="登 录" />


                    <Button
                        android:id="@+id/btnLoginDemo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h_login_edit_height"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/btn_normal_gray"
                        android:text="试玩参观" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@mipmap/login_bg_right"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/login_uname_add" />

                    <Button
                        android:id="@+id/btnLoginRegister"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:text="注\n册\n新\n用\n户\n"
                        android:textColor="@color/register_left" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
