<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/title_text"
    android:orientation="vertical">

    <com.hgapp.a6668.common.widgets.NTitleBar
        android:id="@+id/cpTitleBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:moreTextOnly="true"
        app:backText="返回"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/cpGameList"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cp_line"
        android:background="@color/cp_line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cpTv1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京赛车"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:drawableTop="@mipmap/cp_bjsc"
            />
        <TextView
            android:layout_width="@dimen/cp_line"
            android:layout_height="match_parent"
            android:background="@color/cp_line"
            />
        <TextView
            android:id="@+id/cpTv2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="幸运飞艇"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:drawableTop="@mipmap/cp_bjsc"
            />
        <TextView
            android:layout_width="@dimen/cp_line"
            android:layout_height="match_parent"
            android:background="@color/cp_line"
            />
        <TextView
            android:id="@+id/cpTv3"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天津时时彩"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:drawableTop="@mipmap/cp_bjsc"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cp_line"
        android:background="@color/cp_line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cpTv4"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="极速赛车"
            android:gravity="center"
            android:drawableTop="@mipmap/cp_bjsc"
            android:drawablePadding="5dp"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="@dimen/cp_line"
            android:layout_height="match_parent"
            android:background="@color/cp_line"
            />
        <TextView
            android:id="@+id/cpTv5"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="六合彩"
            android:gravity="center"
            android:drawableTop="@mipmap/cp_bjsc"
            android:drawablePadding="5dp"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="@dimen/cp_line"
            android:layout_height="match_parent"
            android:background="@color/cp_line"
            />
        <TextView
            android:id="@+id/cpTv6"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分分彩"
            android:gravity="center"
            android:drawableTop="@mipmap/cp_bjsc"
            android:drawablePadding="5dp"
            android:padding="5dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cp_line"
        android:background="@color/cp_line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cpTv7"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PC蛋蛋"
            android:gravity="center"
            android:drawableTop="@mipmap/cp_bjsc"
            android:drawablePadding="5dp"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="@dimen/cp_line"
            android:layout_height="match_parent"
            android:background="@color/cp_line"
            />
        <TextView
            android:id="@+id/cpTv8"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快乐十分"
            android:gravity="center"
            android:drawableTop="@mipmap/cp_bjsc"
            android:drawablePadding="5dp"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="@dimen/cp_line"
            android:layout_height="match_parent"
            android:background="@color/cp_line"
            />
        <TextView
            android:id="@+id/cpTv9"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="幸运农场"
            android:gravity="center"
            android:drawableTop="@mipmap/cp_bjsc"
            android:drawablePadding="5dp"
            android:padding="5dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cp_line"
        android:background="@color/cp_line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cpTv10"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="江苏快3"
            android:gravity="center"
            android:drawableTop="@mipmap/cp_bjsc"
            android:drawablePadding="5dp"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="@dimen/cp_line"
            android:layout_height="match_parent"
            android:background="@color/cp_line"
            />
        <TextView
            android:id="@+id/cpTv11"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多彩种"
            android:gravity="center"
            android:drawableTop="@mipmap/cp_bjsc"
            android:drawablePadding="5dp"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="@dimen/cp_line"
            android:layout_height="match_parent"
            android:background="@color/cp_line"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天津时时彩"
            android:visibility="invisible"
            android:gravity="center"
            android:drawableTop="@mipmap/cp_bjsc"
            android:drawablePadding="5dp"
            android:padding="5dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cp_line"
        android:background="@color/cp_line"
        />



</LinearLayout>
