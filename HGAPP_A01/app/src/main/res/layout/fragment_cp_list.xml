<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_text">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/title_text"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@mipmap/cp_title"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/tv_com_title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="彩票游戏"
                    android:textColor="@color/title_text"
                    android:textSize="22sp" />

            </RelativeLayout>

            <!--<android.support.v7.widget.RecyclerView
                android:id="@+id/cpGameList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86px"
                android:background="#f0efef"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="43px"
                    android:background="@mipmap/home_notice" />

                <com.hgapp.a6668.common.widgets.MarqueeTextView
                    android:id="@+id/cpPageBulletin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="33px"
                    android:layout_weight="1"
                    android:background="#f0efef"
                    android:gravity="center|left"
                    android:textColor="#666666"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/cp_line"
                android:background="@color/cp_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cpTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/cp_bjsc"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="北京赛车" />

                <TextView
                    android:layout_width="@dimen/cp_line"
                    android:layout_height="match_parent"
                    android:background="@color/cp_line" />

                <TextView
                    android:id="@+id/cpTv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/cp_jsft"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="极速飞艇" />

                <TextView
                    android:layout_width="@dimen/cp_line"
                    android:layout_height="match_parent"
                    android:background="@color/cp_line" />

                <TextView
                    android:id="@+id/cpTv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/cp_cqssc"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="重庆时时彩" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/cp_line"
                android:background="@color/cp_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cpTv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/cp_jsfc"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="极速赛车" />

                <TextView
                    android:layout_width="@dimen/cp_line"
                    android:layout_height="match_parent"
                    android:background="@color/cp_line" />

                <TextView
                    android:id="@+id/cpTv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/cp_lhc"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="六合彩" />

                <TextView
                    android:layout_width="@dimen/cp_line"
                    android:layout_height="match_parent"
                    android:background="@color/cp_line" />

                <TextView
                    android:id="@+id/cpTv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/cp_ffc"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="分分彩" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/cp_line"
                android:background="@color/cp_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cpTv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/cp_pcdd"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="PC蛋蛋" />

                <TextView
                    android:layout_width="@dimen/cp_line"
                    android:layout_height="match_parent"
                    android:background="@color/cp_line" />

                <TextView
                    android:id="@+id/cpTv8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/cp_klsfc"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="快乐十分" />

                <TextView
                    android:layout_width="@dimen/cp_line"
                    android:layout_height="match_parent"
                    android:background="@color/cp_line" />

                <TextView
                    android:id="@+id/cpTv9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/cp_xync"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="幸运农场" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/cp_line"
                android:background="@color/cp_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cpTv10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/cp_js"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="江苏快3" />

                <TextView
                    android:layout_width="@dimen/cp_line"
                    android:layout_height="match_parent"
                    android:background="@color/cp_line" />

                <TextView
                    android:id="@+id/cpTv11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/cp_more"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="更多彩种" />

                <TextView
                    android:layout_width="@dimen/cp_line"
                    android:layout_height="match_parent"
                    android:background="@color/cp_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/cp_bjsc"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="天津时时彩"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/cp_line"
                android:background="@color/cp_line" />

        </LinearLayout>
    </ScrollView>
    <com.hgapp.a6668.common.widgets.CPBottomBar
        android:background="@mipmap/cp_bottom"
        android:id="@+id/cpBottomBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottombar_wechat_height"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
