<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hgapp.a0086.common.widgets.NTitleBar
        android:id="@+id/tvCompanyPayBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backText="@string/comm_back" />

    <TextView
        android:layout_margin="5dp"
        android:textColor="@color/color_translucent"
        android:text="@string/deposite_bank_infor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/deposite_bank_name"
            android:textSize="15sp" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvDepositCompanyPayBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="111"
                />
            <TextView
                android:id="@+id/tvDepositCompanyPayBankCont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:textColor="@color/event_line"
                android:gravity="left|center"
                android:text="222"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="16dp"
        >

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/deposite_bank_pay_name"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/etDepositCompanyPayName"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="@string/deposite_aliqcpay_type_h"
            android:gravity="center|left"
            />
        <Button
            android:id="@+id/etDepositCompanyPayNameCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deposite_bank_copy"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="16dp"
        >

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/deposite_bank_number"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvDepositCompanyPayBankNumber"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="@string/deposite_bank_number" />
        <Button
            android:id="@+id/tvDepositCompanyPayBankNumberCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deposite_bank_copy"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="6dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/deposite_bank_address"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvDepositCompanyPayBankAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="@string/deposite_bank_address"
            android:textColor="@color/event_line"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <TextView
        android:layout_margin="5dp"
        android:text="@string/deposite_bank_money_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <Button
        android:id="@+id/btnDepositCompanyPaySubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_tbn_height"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:text="@string/deposite_bank_submit" />

    <TextView
        android:layout_margin="5dp"
        android:textColor="@android:color/holo_red_light"
        android:text="@string/deposite_bank_mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>