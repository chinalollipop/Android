<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hgapp.a0086.common.widgets.NTitleBar
        android:id="@+id/tvCompanyPayBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backText="返回" />

    <TextView
        android:layout_margin="5dp"
        android:textColor="@color/color_translucent"
        android:text="汇款详细账户资料"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="银行"
            android:textSize="15sp" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvDepositCompanyPayBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="工商银行"
                />
            <TextView
                android:id="@+id/tvDepositCompanyPayBankCont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:textColor="@color/event_line"
                android:gravity="left|center"
                android:text="工商银行"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="16dp"
        >

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="开户名"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/etDepositCompanyPayName"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="请输入存款人姓名"
            android:gravity="center|left"
            />
        <Button
            android:id="@+id/etDepositCompanyPayNameCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复制"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_edit_height"
        android:layout_marginLeft="16dp"
        >

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="银行账号"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvDepositCompanyPayBankNumber"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="银行账号" />
        <Button
            android:id="@+id/tvDepositCompanyPayBankNumberCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复制"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/l_view_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="6dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="银行分行"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvDepositCompanyPayBankAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:inputType="number"
            android:text="银行地址"
            android:textColor="@color/event_line"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <TextView
        android:layout_margin="5dp"
        android:text="温馨提示：\n 一：请在金额转出之后务必及时填写汇款信息表格，以遍我们财务人员能及时为您确认添加金额到您的会员账号。\n二：本公司最低存款金额为100元。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/l_view_color" />

    <Button
        android:id="@+id/btnDepositCompanyPaySubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_tbn_height"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:text="填写汇款表格" />

    <TextView
        android:layout_margin="5dp"
        android:textColor="@android:color/holo_red_light"
        android:text="此存款信息只是您汇款详情的提交，并非代表存款。您需要自己通过ATM或网银转账到本公司的账户后，填写提交此信息，待工作人员核实充值！"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>