<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_bg"
    android:orientation="vertical">

    <com.hgapp.a0086.common.widgets.NTitleBar
        android:id="@+id/backTitleBalanceTransfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backText="@string/comm_back"
        app:moreText="0.0"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/all_bg"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="16dp"
            android:gravity="center|left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/comm_roll_out"
                android:textColor="@color/textview_hight"
                android:textSize="15sp" />


                <TextView
                    android:id="@+id/tvBalanceTransferOut"
                    android:background="@mipmap/icon_textview_transfer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:textColor="#868686"
                    android:textSize="15sp"
                    android:text="@string/plat_exchange" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"

            android:layout_marginRight="40dp"
            android:layout_marginLeft="16dp"
            android:gravity="center|left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/comm_roll_in"
                android:textColor="@color/textview_hight"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvBalanceTransferIn"
                android:background="@mipmap/icon_textview_transfer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textColor="#868686"
                android:text="@string/plat_exchange" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_edit_height"
            android:layout_marginLeft="16dp"
            android:gravity="center|left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/comm_roll_money"
                android:textColor="@color/textview_hight"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:background="@mipmap/icon_edittext_transfer">

                <EditText
                    android:id="@+id/etBalanceTransferMoney"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/comm_roll_money_in"
                    android:inputType="number"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp"
                    android:textColor="#868686"
                    android:text="@string/comm_roll_money_unit" />

            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color"
            />
        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comm_roll_money_all"
                android:textColor="@color/textview_hight"
                android:textSize="15sp" />
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="#868686"
                android:textSize="12sp"
                android:padding="10dp"
                android:layout_margin="8dp"
                android:background="@drawable/btn_balance_transfer"
                />-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvBalanceTransfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/l_view_color"
            />
        <Button
            android:id="@+id/btnBalanceTrensferSubmit"
            android:layout_width="match_parent"
            android:text="@string/comm_confirm"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="@dimen/h_tbn_height" />



        <LinearLayout
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textview_hight"
                android:textSize="15sp"
                android:text="@string/comm_dialog_title"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textview_hight"
                android:textSize="12sp"
                android:text="@string/str_exchange_text"
                />
        </LinearLayout>




    </LinearLayout>
</LinearLayout>