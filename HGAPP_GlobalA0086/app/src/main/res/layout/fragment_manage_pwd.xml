            android:inputType="textPassword"
            android:hint="@string/pwd_newloginpwd2_hint"
            android:textColorHint="@color/n_edittext_pwd"
            android:textSize="15sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
