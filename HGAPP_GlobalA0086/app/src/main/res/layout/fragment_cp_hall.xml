    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@mipmap/cp_title"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/cpHallBackHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/cp_home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="游戏大厅"
            android:textColor="@color/title_text"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/cpHallMenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/cp_hall_menu" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86px"
        android:background="#f0efef"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43px"
            android:background="@mipmap/home_notice" />

        <com.hgapp.a0086.common.widgets.MarqueeTextView
            android:id="@+id/cpPageBulletin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="33px"
            android:layout_weight="1"
            android:background="#f0efef"
            android:gravity="center|left"
            android:textColor="#666666"
            android:textSize="12sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cp_hall_cline">

        <TextView
            android:id="@+id/cpHallUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@mipmap/cp_user_name"
            android:drawablePadding="10dp"
            android:text=""
            android:textColor="@color/cp_hall_tv"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cpHallUserMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:drawableLeft="@mipmap/cp_user_money"
            android:drawablePadding="10dp"
            android:text=""
            android:textColor="@color/cp_hall_tv"
            android:textSize="16sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cpHallList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
