<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5EEE6">

        <TextView
            android:id="@+id/tv_M_Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="@string/games_ball_running" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="31/08 " />

        <TextView
            android:id="@+id/tv_showretime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/games_ball_zhong" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/games_ball_rang" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/games_ball_size" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="6dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_team_h"
            android:layout_centerVertical="true"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:textSize="16sp"
            android:text="阿德莱雷鸟阿德莱雷鸟阿德莱雷鸟阿德莱雷鸟"
            android:textColor="#303030" />
        <TextView
            android:id="@+id/tv_redcard_h"
            android:background="#C9270B"
            android:layout_toLeftOf="@+id/ll_team_h_rang"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/title_text"
            />
        <LinearLayout
            android:id="@+id/ll_team_h_rang"
            android:background="@drawable/wanfa_item_default"
            android:layout_toLeftOf="@+id/ll_team_h_daxiao"
            android:layout_centerVertical="true"
            android:layout_width="84dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ratio_mb_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/games_ball_rang"
                android:textColor="#6E5336" />

            <TextView
                android:id="@+id/tv_ior_rh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/games_ball_rang"
                android:textColor="#C9270B" />
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/ll_team_h_daxiao"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_width="84dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/wanfa_item_default"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ratio_o_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/games_ball_size"
                android:textColor="#6E5336" />

            <TextView
                android:id="@+id/tv_ior_ouc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/games_ball_size"
                android:textColor="#C9270B " />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="6dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_team_c"
            android:layout_centerVertical="true"
            android:layout_width="140dp"
            android:gravity="left|center"
            android:layout_height="match_parent"
            android:text="阿德莱雷鸟阿德莱雷鸟阿德莱雷鸟阿德莱雷鸟"
            android:textSize="16sp"
            android:textColor="#303030" />

        <TextView
            android:id="@+id/tv_redcard_c"
            android:background="#C9270B"
            android:layout_toLeftOf="@+id/ll_team_c_rang"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/title_text"
            />
        <LinearLayout
            android:id="@+id/ll_team_c_rang"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ll_team_c_daxiao"
            android:layout_width="84dp"
            android:layout_height="50dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/wanfa_item_default"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ratio_tg_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="@string/games_ball_rang"
                android:textColor="#6E5336" />

            <TextView
                android:id="@+id/tv_ior_rc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:text="@string/games_ball_rang"
                android:textColor="#C9270B" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_team_c_daxiao"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="84dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:background="@drawable/wanfa_item_lock"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ratio_u_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/games_ball_size"
                android:textColor="#6E5336" />

            <TextView
                android:id="@+id/tv_ior_ouh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/games_ball_size"
                android:textSize="16sp"
                android:textColor="#C9270B" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_pay_all"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@drawable/ex_item_default"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@mipmap/wanfa" />

        <TextView
            android:id="@+id/tv_pay_all"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="@string/games_ball_method"
            android:textColor="#579F7E" />

    </LinearLayout>


</LinearLayout>