<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_text"
    android:orientation="vertical">

    <com.nhg.xhg.common.widgets.NTitleBar
        android:id="@+id/tvLoginBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backText="返回"
        app:moreTextOnly="true"
        app:titleText="修改登录密码"
        app:titleTextShow="false" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">


        <LinearLayout
            android:background="@drawable/btn_normal_gray"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="42dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivLoginType"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/login_uname" />
            </LinearLayout>

            <EditText
                android:id="@+id/etLoginType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="-7dp"
                android:background="@null"
                android:textColor="@color/register_left"
                android:textColorHint="@color/register_left"
                android:hint="您的会员账号" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_normal_gray"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="42dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tvLoginPwd1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/login_pwd" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etLoginPwd"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginLeft="-7dp"
                    android:background="@null"
                    android:hint="请输入原密码"
                    android:inputType="textPassword"
                    android:textColor="@color/register_left"
                    android:textColorHint="@color/register_left"
                    android:maxLength="15" />

                <ImageView
                    android:id="@+id/etLoginEyes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/icon_eye_close" />
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_normal_gray"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="42dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/login_pwd" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etLoginPwd1"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginLeft="-7dp"
                    android:background="@null"
                    android:hint="请输入新密码"
                    android:textColor="@color/register_left"
                    android:textColorHint="@color/register_left"
                    android:inputType="textPassword"
                    android:maxLength="15" />

                <ImageView
                    android:id="@+id/etLoginEyes1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/icon_eye_close" />
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_normal_gray"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="42dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/login_pwd" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etLoginPwd2"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginLeft="-7dp"
                    android:background="@null"
                    android:hint="请再次输入新密码"
                    android:inputType="textPassword"
                    android:textColor="@color/register_left"
                    android:textColorHint="@color/register_left"
                    android:maxLength="15" />

                <ImageView
                    android:id="@+id/etLoginEyes2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/icon_eye_close" />
            </RelativeLayout>

        </LinearLayout>

        <CheckBox
            android:id="@+id/cbLoginRemeber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="记住手机号"
            android:textColor="@color/textview_hight"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnLoginSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_login_edit_height"
            android:layout_marginTop="10dp"
            android:text="确认提交" />

    </LinearLayout>
</LinearLayout>