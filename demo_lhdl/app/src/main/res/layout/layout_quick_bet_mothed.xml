<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/frame_roundcorner_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="保存快捷投注"
            android:textColor="@color/cp_hall_tv"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/radioGroupId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">

            <RadioButton
                android:id="@+id/quickBetMethod1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快捷投注一"
                android:checked="true"
                android:textColor="@color/cp_hall_tv"
                android:textSize="18sp" />

            <RadioButton
                android:layout_marginTop="10dp"
                android:id="@+id/quickBetMethod2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快捷投注二"
                android:textColor="@color/cp_hall_tv"
                android:textSize="18sp" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#7B7369" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/betMethodCpCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_cancel_dialog"
                android:gravity="center"
                android:paddingTop="39px"
                android:paddingBottom="39px"
                android:text="取消"
                android:textColor="@color/pop_hight"
                android:textSize="16sp" />

            <Button
                android:id="@+id/betMethodCpSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_bet_submit_dialog"
                android:gravity="center"
                android:paddingTop="39px"
                android:paddingBottom="39px"
                android:text="确认交易"
                android:textColor="@color/pop_hight"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>